@model ArmyTech.Dtos.StudentForCreateDto

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


<div class="container">
    <div class="row">
        <div class="col-sm-12">
            @using (Html.BeginForm("Create", "Student", method: FormMethod.Post, htmlAttributes:
    new { @class = "form-group" }))
            {
                @*@Html.ValidationSummary()*@
                @Html.LabelFor(stud => stud.StudentName)
                @Html.TextBoxFor(stud => stud.StudentName, htmlAttributes: new { @class = "form-control" })


                <br />


                @Html.LabelFor(stud => stud.BirthDate)
                @Html.TextBoxFor(stud => stud.BirthDate, htmlAttributes: new { @class = "form-control" })

                <br />

                @Html.LabelFor(stud => stud.FieldName, "Field", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.SelectedFieldId, new SelectList(Model.Fields, "ID", "Name"),
                        htmlAttributes: new { @class = "form-control" })
                </div>

                <br />

                <div>

                    @Html.LabelFor(stud => stud.GovernateName, "Governate",
                   new { @class = "control-label col-md-2" })

                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.SelectedGovernateId, new SelectList(Model.Governorates,
                       "ID", "Name"),
                            htmlAttributes: new { @class = "form-control" })
                    </div>

                </div>


                <br />

                <div>

                    @Html.LabelFor(stud => stud.NeighbourhoodName, "Neighborhood", new { @class = "control-label col-md-2" })

                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.SelectedNeigbhourhoodId,
                                new SelectList(Model.Neighborhoods,
                       "ID", "Name"),
                            htmlAttributes: new { @class = "form-control" })
                    </div>


                </div>

                <br />

                <div>


                    <label class="control-label col-md-2"> Teachers</label>
                    @Html.ListBox("TeachersIndex", (MultiSelectList)ViewBag.Teachers)

                </div>


                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <div class="col-sm-2 mt-5 ml-2">
                    <input type="submit" class="btn btn-success" value="Save" />

                </div>
            }




        </div>

    </div>
</div>